# --- IXC ---
IXC_MODE=real
IXC_HOST=seu-host-ixc
IXC_USER=usuario-webservice
IXC_TOKEN=token-webservice
IXC_VERIFY_TLS=true
IXC_TIMEOUT_S=20
IXC_SLOW_THRESHOLD_MS=1500

# --- Banco ---
POSTGRES_DB=softhub
POSTGRES_USER=postgres
POSTGRES_PASSWORD=troque-esta-senha

# --- Core API ---
CORE_API_WORKERS=2
DATABASE_URL=postgresql+psycopg://postgres:troque-esta-senha@postgres:5432/softhub
REDIS_URL=redis://redis:6379/0
CORS_ALLOW_ORIGINS=
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# --- Frontend ---
VITE_API_BASE=/api
VITE_FEATURE_ADMIN=false

# --- Opcional: proteção basic auth no Nginx ---
# 1) Gere o arquivo .htpasswd:
#    docker run --rm --entrypoint htpasswd httpd:2 -Bbn admin SENHA_FORTE > .htpasswd
# 2) Monte em /etc/nginx/.htpasswd no serviço web no compose de produção.
